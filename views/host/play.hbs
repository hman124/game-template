<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Civilpaper - playing game</title>
    <meta name="viewport" content="width=device-width, initial-scale-1.0">
  </head>
  <body>
    <h1>
      Objective: find the amendment that gauranteed citizenship to all former
      slaves</h1>
    <hr>
    <h1>Leaderboard:</h1>
    <ul></ul>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/linkgame.js"></script>
    <script>
      linkGame("{{gamePin}}","{{userId}}");
      
      var socket = io(),
          nextPlace = 1;
      socket.on("newUpdate", update => {
        var li = document.createElement("li");
        li.innerHTML = `<b>${update.user}</b> ${update.text}`;
        document.querySelector("#updates").appendChild(li);
      });
      
      socket.on("newWin", win => {
        var li = document.createElement("li");
        li.innerHTML = `${nextPlace}. ${win.user}`;
        nextPlace++;
      });
      
      const beforeUnloadListener = (event) => {
         event.preventDefault();
         return event.returnValue = "Are you sure you want to exit?";
      };
      window.addEventListener("beforeunload", beforeUnloadListener, {capture: true});
    </script>
  </body>
</html>
